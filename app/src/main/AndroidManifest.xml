<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iago92.newsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ArticleActivity"
            android:label="@string/articles"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ResourceActivity"
            android:label="@string/resources"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ArticleDetailActivity"
            android:label="@string/article"></activity>
        <activity android:name=".ArticleWebView"
            android:label="@string/webView"></activity>
        <activity android:name=".SavedArticlesActivity"
            android:label="@string/savedArticles"></activity>
    </application>

</manifest>